    <style>
    body { padding-top: 10px; };
    </style>
  </head>
  <body>

<!--     NAV
 -->  <header>

         <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
           </button>

           <div class="collapse navbar-collapse" id="navbarColor02">
             <ul class="navbar-nav mr-auto">

               <li class="nav-item active">
                 <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
               </li>

               <li class="nav-item">
                 <a class="nav-link" href="/user">Community</a>
               </li>


               <li class="nav-item">
                 <a class="nav-link" href="/event">Happenings</a>
               </li>
               </ul>

               <ul class="navbar-nav">
                 <li class="nav-item">
                   <a class="nav-link" href="/user">Return to Community</a>
                 </li>
               </ul>

           </div>
         </nav>

    	</header>

<!--         NEW ARTIST FORM
 -->  <main>

          <div class="container-fluid text-center">
    				<div class="col-lg-12 col-sm-12">

              <h4>Creator Form for <%=user.username%></h4>

                <form action="/artist" method="POST"><br />

                  <select class="invisible" name="userId">
                      <option value="<%=user._id%>"><%= user.username %></option>
                  </select> <br/>

                <label class= "control-label" for="artistName">Artist Name:</label>
    						<input type="text" class= "form-control" name="name" id= "artistName" placeholder="Name"><br />

    						<label class= "control-label" for="artistGenre">Genre:</label>
    						<input type="text" class= "form-control" name="genre" placeholder="Genre"><br />

    						<label class= "control-label" for="artistLocation">Location:</label>
    						<input type="text" class= "form-control" name="location" placeholder="Location"><br />

                <label class= "control-label" for="artistWebsite">Website:</label>
    						<input type="text" class= "form-control" name="website" placeholder="Website"><br />

    						<label class= "control-label" for="artistImage">Image Link:</label>
    						<input type="text" class= "form-control" name="img" placeholder="Image Link"><br />

    						<label class= "control-label" for="artistDescription">Artist Description:</label><br />
                <div class="form-group">
                 <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
               </div>

    						<button id="new-submit" class="btn btn-dark mb-2 btn-block" type="submit">Create Artist</button>
    					</form>
    				</div>


        </div>
      </main>

  <footer class="container-fluid text-center">
    <form action="/logout" method="GET">
        <input type="submit" class="btn btn-danger" id="logout" value="Logout <%=user.username%>" />
    </form>
  </footer>

  </body>
</html>
